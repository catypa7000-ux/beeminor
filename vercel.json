{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "web-build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/favicon.ico",
      "dest": "/web-build/favicon.ico"
    },
    {
      "src": "/static/(.*)",
      "dest": "/web-build/static/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|json))",
      "dest": "/web-build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/web-build/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/server.js"
    },
    {
      "source": "/:path*",
      "destination": "/web-build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}